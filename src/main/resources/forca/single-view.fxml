<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="768.0" prefWidth="1366.0"
           xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="forca.controller.SinglePlayerController">

    <children>

        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-image: url('/forca/images/medieval-town.jpeg'); -fx-background-size: cover; -fx-background-position: center;">
            <children>

                <VBox alignment="CENTER" maxWidth="800.0" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-background-radius: 20;">
                    <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>
                    <children>

                        <HBox alignment="CENTER" spacing="50.0">
                            <Label fx:id="lblNomeJogador" text="Jogador: VocÃª" textFill="WHITE">
                                <font><Font name="System Bold" size="24.0" /></font>
                                <effect><DropShadow /></effect>
                            </Label>
                            <Label fx:id="lblCategoria" text="Categoria: GERAL" textFill="#ffcc00">
                                <font><Font size="18.0" /></font>
                                <effect><DropShadow /></effect>
                            </Label>
                            <Label fx:id="lblErros" text="Erros: 0/6" textFill="#ff6b6b">
                                <font><Font name="System Bold" size="24.0" /></font>
                                <effect><DropShadow /></effect>
                            </Label>
                        </HBox>

                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="250.0">
                            <children>
                                <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@images/Forca.png" /></image>
                                </ImageView>
                                <ImageView fx:id="imgCabeca" fitHeight="100.0" fitWidth="40.0" layoutX="106.0" layoutY="55.0" pickOnBounds="true" preserveRatio="true" visible="false"><image><Image url="@images/CabecaBoneco.png" /></image></ImageView>
                                <ImageView fx:id="imgTronco" fitHeight="100.0" fitWidth="40.0" layoutX="106.0" layoutY="120.0" pickOnBounds="true" preserveRatio="true" visible="false"><image><Image url="@images/TroncoBoneco.png" /></image></ImageView>
                                <ImageView fx:id="imgBracoE" fitHeight="320.0" layoutX="72.0" layoutY="-35.0" pickOnBounds="true" preserveRatio="true" rotate="-9.0" visible="false"><image><Image url="@images/BracoBoneco.png" /></image></ImageView>
                                <ImageView fx:id="imgBracoD" fitHeight="191.0" fitWidth="138.0" layoutX="52.0" layoutY="37.0" pickOnBounds="true" preserveRatio="true" rotate="3.0" visible="false"><image><Image url="@images/BracoDireitoBoneco.png" /></image></ImageView>
                                <ImageView fx:id="imgPernaE" fitWidth="100.0" layoutX="83.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" visible="false"><image><Image url="@images/PernaBoneco.png" /></image></ImageView>
                                <ImageView fx:id="imgPernaD" fitWidth="100.0" layoutX="80.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" visible="false"><image><Image url="@images/PernaDireitaBoneco.png" /></image></ImageView>
                            </children>
                        </Pane>

                        <Label fx:id="lblPalavraOculta" text="_ _ _ _ _" textAlignment="CENTER" textFill="WHITE">
                            <font><Font name="Consolas Bold" size="48.0" /></font>
                            <effect><DropShadow color="#000000" radius="3.0" spread="1.0" /></effect>
                        </Label>

                        <Label fx:id="lblTentativas" text="Usadas: -" textFill="#cccccc" wrapText="true">
                            <font><Font name="Consolas Bold" size="18.0" /></font>
                            <effect><DropShadow /></effect>
                        </Label>

                        <Label fx:id="lblMensagem" text="Digite uma letra" textFill="WHITE">
                            <font><Font name="System Bold" size="16.0" /></font>
                            <effect><DropShadow /></effect>
                            <VBox.margin><Insets top="10.0" /></VBox.margin>
                        </Label>

                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <TextField fx:id="inputLetra" alignment="CENTER" onAction="#onBotaoTentar" prefHeight="50.0" prefWidth="60.0">
                                    <font><Font size="20.0" /></font>
                                </TextField>
                                <Button onAction="#onBotaoTentar" prefHeight="50.0" style="-fx-font-weight: bold;" text="TENTAR" />
                                <Button onAction="#onBotaoChutar" prefHeight="50.0" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;" text="CHUTAR PALAVRA" />
                            </children>
                            <VBox.margin><Insets top="15.0" /></VBox.margin>
                        </HBox>

                    </children>
                </VBox>
            </children>
        </VBox>

        <VBox fx:id="paneChutar" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="300.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: rgba(25, 42, 86, 0.95); -fx-background-radius: 20; -fx-border-color: #e67e22; -fx-border-width: 3; -fx-border-radius: 15;" visible="false">
            <effect><DropShadow height="50.0" radius="24.5" width="50.0" /></effect>
            <children>
                <Label text="CHUTAR PALAVRA" textFill="#e67e22"><font><Font name="System Bold" size="30.0" /></font><effect><DropShadow /></effect></Label>
                <Label text="Cuidado! Se errar, conta como erro." textFill="#ecf0f1"><font><Font size="16.0" /></font></Label>
                <TextField fx:id="inputChute" alignment="CENTER" maxWidth="350.0" onAction="#onConfirmarChute" prefHeight="45.0" promptText="Digite a palavra completa" style="-fx-font-size: 18px;" />
                <HBox alignment="CENTER" spacing="20.0">
                    <Button onAction="#onCancelarChute" prefHeight="40.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;" text="CANCELAR"><font><Font name="System Bold" size="14.0" /></font></Button>
                    <Button onAction="#onConfirmarChute" prefHeight="40.0" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-cursor: hand;" text="CONFIRMAR CHUTE"><font><Font name="System Bold" size="14.0" /></font></Button>
                </HBox>
            </children>
        </VBox>

        <VBox fx:id="paneGameOver" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: rgba(0, 0, 0, 0.95); -fx-background-radius: 30; -fx-border-color: #ffcc00; -fx-border-width: 5; -fx-border-radius: 25;" visible="false">
            <effect><DropShadow color="#000000" height="50.0" radius="24.5" width="50.0" /></effect>
            <children>
                <Label fx:id="lblResultadoGame" text="FIM DE JOGO!" textFill="#ffcc00"><font><Font name="System Bold" size="48.0" /></font><effect><DropShadow /></effect></Label>
                <Label fx:id="lblPalavraFinal" text="A palavra era: BANANA" textFill="#cccccc"><font><Font name="Consolas Bold" size="24.0" /></font><VBox.margin><Insets bottom="20.0" /></VBox.margin></Label>
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button minWidth="150.0" onAction="#onBotaoVoltarMenu" prefHeight="50.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="VOLTAR AO MENU"><font><Font size="14.0" /></font></Button>
                        <Button minWidth="150.0" onAction="#onBotaoSair" prefHeight="50.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="SAIR DO JOGO"><font><Font size="14.0" /></font></Button>
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>
</StackPane>